{
  "name": "node-typescript-starter",
  "version": "1.0.0",
  "description": "basic node.js, typescript, and jest project starter",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node index.ts --watch src",
    "lint": "prettier --write \"{src,test}/**/*.ts\""
  },
  "keywords": [
    "typescript",
    "nodejs",
    "starter",
    "jest"
  ],
  "author": "nkmmadusanka@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}
